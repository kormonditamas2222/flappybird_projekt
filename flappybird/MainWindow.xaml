<Window x:Name="MainWindow1" x:Class="flappybird.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:flappybird"
        mc:Ignorable="d"
		KeyDown="SpaceDown"
		Focusable="True"
        Title="Repülő sajt" Height="450" Width="800" ResizeMode="NoResize">
	<Canvas x:Name="mainCanvas">
		<StackPanel x:Name="sp" Width="800" Height="450" Background="Goldenrod">
			<TextBlock FontSize="40" HorizontalAlignment="Center" Margin="0, 100, 0, 0" Text="Repülő sajt"/>
			<Button Width="100" FontSize="30" Margin="0, 50, 0, 0" Content="Start" Click="Button_Click"/>
			<Button Width="100" FontSize="30"  Content="Esős" Click="Esos_Click"/>
			<Button Width="100" FontSize="30" Content="Ködös" Click="Kodos_Click"/>
		</StackPanel>
		<StackPanel x:Name="sp_end" Width="800" Height="350" Canvas.Top="100" Visibility="Hidden">
			<TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="50" Text="GAME OVER"/>
			<TextBlock x:Name="tb_pont" Text="placeholder" FontSize="50" HorizontalAlignment="Center" VerticalAlignment="Center"/>
			<Button Width="100" FontSize="30" Content="Újra" Click="Ujra_Click" Focusable="False"/>
		</StackPanel>
		<Image Visibility="Hidden" x:Name="hatter" Source="\images\hatter.jfif" Height="450" Width="800" HorizontalAlignment="Left" Stretch="Fill" VerticalAlignment="Center"></Image>
		<Image Visibility="Hidden" x:Name="esoshatter" Source="/Images/esos.jpg" Height="450" Width="800" HorizontalAlignment="Left" Stretch="Fill" VerticalAlignment="Center"></Image>
		<TextBlock x:Name="pontszam" Canvas.Left="394" Text="0" FontSize="40" Panel.ZIndex="2" Visibility="Hidden"/>
		<Image Visibility="Hidden" Panel.ZIndex="1" x:Name="kod" Source="/Images/kod.png" Height="450" Width="400" Canvas.Left="400" Stretch="Fill"></Image>
		<Ellipse Visibility="Hidden" x:Name="sajd" Height="50" Canvas.Left="40" Canvas.Top="120" Width="50">
			<Ellipse.Fill>
				<ImageBrush ImageSource="/Images/sajd.jpg"></ImageBrush>
			</Ellipse.Fill>
		</Ellipse>
	</Canvas>
</Window>
